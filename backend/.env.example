# Get a free API key at https://finnhub.io/register
FINNHUB_API_KEY=your_finnhub_api_key_here

# Get a free API key at https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# JWT signing secret (change in production!)
SECRET_KEY=your-secret-key-change-in-production

# PostgreSQL connection string (leave unset to use SQLite for local development)
# DATABASE_URL=postgresql://user:pass@localhost:5432/bta_dev

# Brave Search API (optional — falls back to DuckDuckGo scraping)
# BRAVE_SEARCH_API_KEY=your_brave_api_key_here

# Jira Cloud (optional — for pulling workflow data)
# JIRA_BASE_URL=https://your-company.atlassian.net
# JIRA_EMAIL=your-email@company.com
# JIRA_API_TOKEN=your_jira_api_token

# ServiceNow (optional — for pulling incident/change workflows)
# SERVICENOW_INSTANCE=dev12345
# SERVICENOW_USERNAME=admin
# SERVICENOW_PASSWORD=your_password
